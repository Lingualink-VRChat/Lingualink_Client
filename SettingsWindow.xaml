<Window x:Class="lingualink_client.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lingualink_client"
        xmlns:vm="clr-namespace:lingualink_client.ViewModels"
        xmlns:converters="clr-namespace:lingualink_client.Converters"
        mc:Ignorable="d"
        Title="应用程序设置" Height="Auto" Width="450" SizeToContent="Height"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <!-- <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/> -->
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Label for Target Languages -->
            <RowDefinition Height="Auto"/> <!-- ItemsControl for Target Languages -->
            <RowDefinition Height="Auto"/> <!-- Add Language Button -->
            <RowDefinition Height="Auto"/> <!-- Spacer -->
            <RowDefinition Height="Auto"/> <!-- Server URL Label -->
            <RowDefinition Height="Auto"/> <!-- Server URL TextBox -->
            <RowDefinition Height="Auto"/> <!-- VAD Expander -->
            <RowDefinition Height="Auto"/> <!-- OSC Expander -->
            <RowDefinition Height="*"/>    <!-- Spacer -->
            <RowDefinition Height="Auto"/> <!-- Save/Cancel Buttons -->
        </Grid.RowDefinitions>

        <!-- Target Languages (Rows 0-2) and Server URL (Rows 4-5) remain the same -->
        <Label Grid.Row="0" Content="目标翻译语言:" Margin="0,0,0,2"/>
        
        <ItemsControl Grid.Row="1" ItemsSource="{Binding TargetLanguageItems}" Margin="0,0,0,5">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:SelectableTargetLanguageViewModel}">
                    <Grid Margin="0,3,0,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/> 
                            <ColumnDefinition Width="*"/>  
                            <ColumnDefinition Width="Auto"/> 
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="{Binding Label}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding AvailableLanguages}" 
                                  SelectedItem="{Binding SelectedLanguage}" 
                                  MinWidth="180" MaxWidth="250" HorizontalAlignment="Stretch"/>
                        
                        <Button Grid.Column="2" Content="移除" 
                                Command="{Binding RemoveCommand}"
                                Visibility="{Binding CanRemove, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="8,0,0,0" Padding="5,2" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Grid.Row="2" Content="增加语言" 
                Command="{Binding AddLanguageCommand}" 
                HorizontalAlignment="Left" Margin="0,5,0,10" Padding="5,2"/>
        
        <Border Grid.Row="3" Height="10"/>

        <Label Grid.Row="4" Content="服务器 URL:"/>
        <TextBox Grid.Row="5" x:Name="ServerUrlTextBox" Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        
        <Expander Grid.Row="6" Header="高级VAD设置" Margin="0,0,0,10" IsExpanded="False">
            <StackPanel Margin="10,5,0,0">
                <Label Content="静音检测阈值 (秒):"/>
                <TextBox Text="{Binding SilenceThresholdSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}" Margin="0,0,0,5"/>
                <Label Content="最小语音时长 (秒):"/>
                <TextBox Text="{Binding MinVoiceDurationSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}" Margin="0,0,0,5"/>
                <Label Content="最大语音时长 (秒):"/>
                <TextBox Text="{Binding MaxVoiceDurationSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}" Margin="0,0,0,5"/>
                
                <Label Content="最小录音音量阈值 (0-100%):" Margin="0,5,0,0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider Grid.Column="0" Minimum="0" Maximum="1.0" SmallChange="0.01" LargeChange="0.1" TickFrequency="0.05"
                            Value="{Binding MinRecordingVolumeThreshold, UpdateSourceTrigger=PropertyChanged}" 
                            VerticalAlignment="Center" Margin="0,0,5,5"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding MinRecordingVolumeThreshold, StringFormat='P0', UpdateSourceTrigger=PropertyChanged}" 
                             Width="50" VerticalAlignment="Center" TextAlignment="Right" Margin="0,0,0,5"/>
                </Grid>
                <TextBlock Text="提示: 仅当麦克风输入音量高于此阈值时才开始处理语音。0% 表示禁用此过滤。" FontSize="10" FontStyle="Italic" Foreground="Gray" TextWrapping="Wrap"/>
            </StackPanel>
        </Expander>

        <!-- OSC Expander (Row 7) remains the same -->
        <Expander Grid.Row="7" Header="VRChat OSC 发送设置" Margin="0,0,0,10" IsExpanded="{Binding EnableOsc}">
            <StackPanel Margin="10,5,0,0">
                <CheckBox Content="启用 OSC 发送" IsChecked="{Binding EnableOsc}" Margin="0,0,0,5"/>
                <Grid IsEnabled="{Binding EnableOsc}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="OSC IP 地址:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding OscIpAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5" VerticalAlignment="Center"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="OSC 端口:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OscPort, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5" VerticalAlignment="Center"/>
                    
                    <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="立即发送 (绕过键盘)" IsChecked="{Binding OscSendImmediately}" Margin="0,5,0,5"/>
                    <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="播放通知音效" IsChecked="{Binding OscPlayNotificationSound}" Margin="0,0,0,5"/>
                </Grid>
            </StackPanel>
        </Expander>


        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="保存" Click="SaveButton_Click" Width="80" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="取消" Click="CancelButton_Click" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>