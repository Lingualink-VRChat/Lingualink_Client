<Window x:Class="lingualink_client.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lingualink_client"
        xmlns:vm="clr-namespace:lingualink_client.ViewModels"
        mc:Ignorable="d"
        Title="应用程序设置" Height="380" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
   <!-- DataContext will be set in code-behind -->
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="目标翻译语言 (逗号分隔, 例如: 英文,日文,法文):"/>
        <TextBox Grid.Row="1" x:Name="TargetLanguagesTextBox" Text="{Binding TargetLanguages, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Content="服务器 URL:"/>
        <TextBox Grid.Row="3" x:Name="ServerUrlTextBox" Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        
        <Expander Grid.Row="4" Header="高级VAD设置" Margin="0,0,0,10" IsExpanded="True">
            <StackPanel Margin="10,5,0,0">
                <Label Content="静音检测阈值 (秒):"/>
                <TextBox x:Name="SilenceThresholdTextBox" Text="{Binding SilenceThresholdSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}" Margin="0,0,0,5"/>
                <Label Content="最小语音时长 (秒):"/>
                <TextBox x:Name="MinVoiceDurationTextBox" Text="{Binding MinVoiceDurationSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}" Margin="0,0,0,5"/>
                <Label Content="最大语音时长 (秒):"/>
                <TextBox x:Name="MaxVoiceDurationTextBox" Text="{Binding MaxVoiceDurationSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat='N2'}" Margin="0,0,0,5"/>
            </StackPanel>
        </Expander>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存" Click="SaveButton_Click" Width="80" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="取消" Click="CancelButton_Click" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>