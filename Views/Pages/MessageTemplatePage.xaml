<Page
    x:Class="lingualink_client.Views.MessageTemplatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lingualink_client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:lingualink_client.ViewModels"
    Title="MessageTemplatePage"
    d:DataContext="{d:DesignInstance Type=vm:MessageTemplatePageViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{DynamicResource PageContentMargin}">
            
            <!-- Page Title -->
            <TextBlock 
                Text="{Binding MessageTemplateSettings}" 
                Style="{DynamicResource PageTitleTextBlockStyle}" />

            <!-- Enable Custom Template -->
            <ui:CardControl Icon="{ui:SymbolIcon EditSettings24}" Margin="0,0,0,12" Padding="12">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="{Binding UseCustomTemplate}" FontWeight="Medium"/>
                        <TextBlock 
                            Text="Enable to customize the output format sent to VRChat" 
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            FontSize="11"/>
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch IsChecked="{Binding UseCustomTemplateEnabled, Mode=TwoWay}" />
            </ui:CardControl>

            <!-- 模板验证警告 -->
            <ui:InfoBar
                IsClosable="False"
                IsOpen="{Binding IsTemplateOverLimit}"
                Severity="Warning"
                Title="{Binding ValidationTitle}"
                Message="{Binding ValidationMessage}"
                Visibility="{Binding IsTemplateOverLimit, Converter={StaticResource BooleanToVisibilityConverter}}"
                Margin="0,0,0,12" />

            <!-- Template Editor Section -->
            <StackPanel IsEnabled="{Binding UseCustomTemplateEnabled}">
                
                <!-- Editor Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="12"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="{Binding CustomTemplateTextLabel}" FontWeight="Medium" Margin="0,0,0,4"/>
                        
                        <ui:TextBox 
                            Text="{Binding CustomTemplateText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MinHeight="80"
                            VerticalScrollBarVisibility="Auto"
                            Margin="0,0,0,12"
                            PlaceholderText="Enter your template here..."/>

                        <TextBlock Text="{Binding AvailablePlaceholders}" FontWeight="Medium" Margin="0,0,0,4"/>
                        
                        <ItemsControl ItemsSource="{Binding PlaceholderList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:Button
                                        Content="{Binding DisplayName}"
                                        Command="{Binding DataContext.InsertPlaceholderCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding Value}"
                                        Margin="0,0,6,6"
                                        Appearance="Secondary"
                                        Padding="8,3" 
                                        FontSize="11"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <ui:Button
                            Margin="0,6,0,0"
                            Content="{Binding ResetToDefaults}"
                            Command="{Binding ResetTemplateCommand}"
                            Appearance="Secondary"
                            Icon="{ui:SymbolIcon ArrowReset24}"
                            HorizontalAlignment="Left" />
                    </StackPanel>
                </Border>

                <!-- Preview Card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="0"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="12,8">
                            <TextBlock
                                FontWeight="SemiBold"
                                Text="{Binding PreviewTemplate}" />
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" MaxHeight="100" VerticalScrollBarVisibility="Auto">
                            <TextBlock 
                                Margin="12"
                                Text="{Binding TemplatePreview}"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="12"
                                LineHeight="16"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- Template Hint -->
                <TextBlock
                    x:Name="TemplateHintText"
                    TextWrapping="Wrap"
                    FontStyle="Italic"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    FontSize="12" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
