<Page
    x:Class="lingualink_client.Views.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lingualink_client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:lingualink_client.ViewModels"
    Title="AccountPage"
    d:DataContext="{d:DesignInstance Type=vm:AccountPageViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:PassiveScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="{DynamicResource PageContentMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- 官方服务大卡片 -->
                <RowDefinition Height="Auto" /> <!-- 高级选项分隔 -->
                <RowDefinition Height="Auto" /> <!-- 自定义服务设置 -->
                <RowDefinition Height="*" />   <!-- 占位符 -->
            </Grid.RowDefinitions>

            <!-- 1. 官方服务 - 主要且醒目的卡片 -->
            <ui:Card
                Grid.Row="0"
                Margin="0,0,0,20"
                Padding="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon -->
                    <ui:SymbolIcon Symbol="PersonCircle24" FontSize="48" VerticalAlignment="Top" Margin="0,4,0,0"/>
                    
                    <StackPanel Grid.Column="1" Margin="24,0,0,0">
                        <!-- 标题和副标题 -->
                        <ui:TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="{Binding OfficialServiceLoginLabel}"
                            Margin="0,0,0,4" />
                        
                        <ui:TextBlock
                            FontSize="14"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding OfficialServiceSubtitleLabel}"
                            Margin="0,0,0,16" />

                        <!-- 即将推出提示 -->
                        <ui:InfoBar
                            IsOpen="True"
                            IsClosable="False"
                            Severity="Informational"
                            Title="{Binding ComingSoonLabel}"
                            Message="{Binding OfficialServiceHint}"
                            Margin="0,0,0,20" />

                        <!-- 登录表单区域 -->
                        <Grid IsEnabled="False" Opacity="0.6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 用户名 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,16">
                                <Label Content="{Binding UsernameLabel}" Margin="0,0,0,4"/>
                                <ui:TextBox
                                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Enter your username" />
                            </StackPanel>

                            <!-- 密码 -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="12,0,0,16">
                                <Label Content="{Binding PasswordLabel}" Margin="0,0,0,4"/>
                                <ui:PasswordBox
                                    Password="{Binding UserPassword, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Enter your password" />
                            </StackPanel>

                            <!-- 登录状态 -->
                            <ui:TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,0,0,16"
                                Text="{Binding NotLoggedInLabel}"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                            <!-- 按钮组 -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                <ui:Button
                                    Width="120"
                                    Margin="0,0,12,0"
                                    Command="{Binding LoginCommand}"
                                    Content="{Binding LoginLabel}"
                                    Appearance="Primary" />
                                <ui:Button
                                    Width="100"
                                    Margin="0,0,12,0"
                                    Command="{Binding LogoutCommand}"
                                    Content="{Binding LogoutLabel}"
                                    Appearance="Secondary" />
                                <ui:Button
                                    Width="120"
                                    Content="{Binding CreateAccountLabel}"
                                    Appearance="Secondary" />
                            </StackPanel>

                            <!-- 忘记密码链接 -->
                            <ui:HyperlinkButton
                                Grid.Row="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,12,0,0"
                                Content="{Binding ForgotPasswordLabel}"
                                HorizontalAlignment="Left" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- 2. 高级选项分隔线 -->
            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                <ui:TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="{Binding AdvancedOptionsLabel}"
                    Margin="0,0,0,8" />
            </StackPanel>

            <!-- 3. 自定义服务器选项 -->
            <ui:CardExpander
                Grid.Row="2"
                Margin="0,0,0,24"
                IsExpanded="{Binding UseCustomServer, Mode=OneWay}"
                Icon="{ui:SymbolIcon Server24}">
                <ui:CardExpander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding UseCustomServerLabel}" FontWeight="Medium" FontSize="14"/>
                            <TextBlock Text="{Binding UseCustomServerHint}" 
                                     FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                                     TextWrapping="Wrap" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding UseCustomServer, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </ui:CardExpander.Header>
                
                <StackPanel Margin="0,10,0,0" IsEnabled="{Binding UseCustomServer}">
                    <!-- 服务器 URL -->
                    <StackPanel Margin="0,0,0,16">
                        <Label Content="{Binding ServerUrlLabel}" Margin="0,0,0,6"/>
                        <ui:TextBox
                            Height="36"
                            VerticalContentAlignment="Center"
                            Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="https://api2.lingualink.aiatechco.com/api/v1/" />
                    </StackPanel>

                    <!-- API 密钥 -->
                    <StackPanel Margin="0,0,0,16">
                        <Label Content="{Binding ApiKeyLabel}" Margin="0,0,0,6"/>
                        <ui:PasswordBox
                            x:Name="ApiKeyPasswordBox"
                            Password="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"
                            PasswordChanged="ApiKeyPasswordBox_PasswordChanged"
                            PlaceholderText="Enter your API key here" />
                    </StackPanel>

                    <!-- 测试连接按钮 -->
                    <StackPanel Orientation="Horizontal">
                        <ui:Button
                            Width="140"
                            Content="{Binding ConnectionTestLabel}"
                            Appearance="Secondary"
                            Icon="{ui:SymbolIcon PlugConnected24}"
                            Command="{Binding TestConnectionCommand}" />
                        <ui:TextBlock
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Click to test your server connection" />
                    </StackPanel>
                </StackPanel>
            </ui:CardExpander>
        </Grid>
    </ui:PassiveScrollViewer>
</Page>