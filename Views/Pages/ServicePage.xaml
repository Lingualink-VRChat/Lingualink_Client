<Page
    x:Class="lingualink_client.Views.ServicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:lingualink_client.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lingualink_client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:lingualink_client.ViewModels"
    Title="ServicePage"
    d:DataContext="{d:DesignInstance Type=vm:ServicePageViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:PassiveScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- 语音识别设置 -->
                <RowDefinition Height="Auto" /> <!-- VRChat集成 -->
                <RowDefinition Height="Auto" /> <!-- 音频处理 -->
                <RowDefinition Height="Auto" /> <!-- 音频增强 -->
                <RowDefinition Height="*" />   <!-- 占位符 -->
                <RowDefinition Height="Auto" /> <!-- 保存/撤销按钮 -->
            </Grid.RowDefinitions>

            <!-- 1. 语音识别设置 -->
            <ui:CardExpander
                Grid.Row="0"
                Margin="0,0,0,15"
                Header="{Binding VoiceRecognitionSettingsLabel}"
                IsExpanded="False">
                <StackPanel Margin="10,5,0,0">
                    <!-- 分组说明 -->
                    <ui:TextBlock
                        FontSize="11"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Margin="0,0,0,10"
                        Text="{Binding VoiceRecognitionSettingsHint}"
                        TextWrapping="Wrap" />
                    
                    <!-- 追加录音时长 -->
                    <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="{Binding PostSpeechRecordingDurationLabel}" />
                        <Grid Grid.Row="1" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                LargeChange="0.1"
                                Maximum="0.7"
                                Minimum="0.1"
                                SmallChange="0.05"
                                TickFrequency="0.1"
                                Value="{Binding PostSpeechRecordingDurationSeconds, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:TextBox
                                Grid.Column="1"
                                Width="60"
                                VerticalAlignment="Center"
                                Text="{Binding PostSpeechRecordingDurationSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                TextAlignment="Right" />
                        </Grid>
                        <ui:TextBlock
                            Grid.Row="2"
                            FontSize="10"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding PostSpeechRecordingDurationHint}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <!-- 最小语音时长 -->
                    <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="{Binding MinVoiceDurationLabel}" />
                        <Grid Grid.Row="1" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                LargeChange="0.1"
                                Maximum="0.7"
                                Minimum="0.1"
                                SmallChange="0.05"
                                TickFrequency="0.1"
                                Value="{Binding MinVoiceDurationSeconds, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:TextBox
                                Grid.Column="1"
                                Width="60"
                                VerticalAlignment="Center"
                                Text="{Binding MinVoiceDurationSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                TextAlignment="Right" />
                        </Grid>
                        <ui:TextBlock
                            Grid.Row="2"
                            FontSize="10"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding MinVoiceDurationHint}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <!-- 最大语音时长 -->
                    <Grid Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="{Binding MaxVoiceDurationLabel}" />
                        <Grid Grid.Row="1" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                LargeChange="1"
                                Maximum="10"
                                Minimum="1"
                                SmallChange="0.5"
                                TickFrequency="1"
                                Value="{Binding MaxVoiceDurationSeconds, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:TextBox
                                Grid.Column="1"
                                Width="60"
                                VerticalAlignment="Center"
                                Text="{Binding MaxVoiceDurationSeconds, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                TextAlignment="Right" />
                        </Grid>
                        <ui:TextBlock
                            Grid.Row="2"
                            FontSize="10"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding MaxVoiceDurationHint}"
                            TextWrapping="Wrap" />
                    </Grid>
                    
                    <!-- 最小音量阈值 -->
                    <Label Margin="0,5,0,0" Content="{Binding MinVolumeThresholdLabel}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Slider
                            Grid.Column="0"
                            Margin="0,0,5,5"
                            VerticalAlignment="Center"
                            LargeChange="0.1"
                            Maximum="1.0"
                            Minimum="0"
                            SmallChange="0.01"
                            TickFrequency="0.05"
                            Value="{Binding MinRecordingVolumeThreshold, UpdateSourceTrigger=PropertyChanged}" />
                        <ui:TextBox
                            Grid.Column="1"
                            Width="50"
                            Margin="0,0,0,5"
                            VerticalAlignment="Center"
                            Text="{Binding MinRecordingVolumeThreshold, StringFormat='P0', UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Right" />
                    </Grid>
                    <ui:TextBlock
                        FontSize="10"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Text="{Binding VolumeThresholdHint}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </ui:CardExpander>

            <!-- 2. VRChat 集成 -->
            <ui:CardExpander
                Grid.Row="1"
                Margin="0,0,0,15"
                Header="{Binding VrchatIntegrationLabel}"
                IsExpanded="False">
                <StackPanel Margin="10,5,0,0">
                    <!-- 分组说明 -->
                    <ui:TextBlock
                        FontSize="11"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Margin="0,0,0,10"
                        Text="{Binding VrchatIntegrationHint}"
                        TextWrapping="Wrap" />
                    
                    <!-- 启用OSC -->
                    <CheckBox
                        Margin="0,0,0,10"
                        Content="{Binding EnableOscLabel}"
                        IsChecked="{Binding EnableOsc}" />
                    
                    <!-- OSC设置组 -->
                    <Grid IsEnabled="{Binding EnableOsc}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="{Binding OscIpAddressLabel}" />
                        <ui:TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,5"
                            VerticalAlignment="Center"
                            Text="{Binding OscIpAddress, UpdateSourceTrigger=PropertyChanged}" />
                        
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="{Binding OscPortLabel}" />
                        <ui:TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,10"
                            VerticalAlignment="Center"
                            Text="{Binding OscPort, UpdateSourceTrigger=PropertyChanged}" />
                        
                        <CheckBox
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,5"
                            Content="{Binding SendImmediatelyLabel}"
                            IsChecked="{Binding OscSendImmediately}" />
                        
                        <CheckBox
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,5"
                            Content="{Binding PlayNotificationSoundLabel}"
                            IsChecked="{Binding OscPlayNotificationSound}" />
                    </Grid>
                </StackPanel>
            </ui:CardExpander>

            <!-- 3. 音频处理 -->
            <ui:CardExpander
                Grid.Row="2"
                Margin="0,0,0,15"
                Header="{Binding AudioProcessingLabel}"
                IsExpanded="False">
                <StackPanel Margin="10,5,0,0">
                    <!-- 分组说明 -->
                    <ui:TextBlock
                        FontSize="11"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Margin="0,0,0,10"
                        Text="{Binding AudioProcessingHint}"
                        TextWrapping="Wrap" />
                    
                    <!-- Opus压缩设置 (始终启用，固定16kbps比特率) -->
                    <Grid Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Opus压缩复杂度 (固定16kbps比特率) -->
                        <Label Grid.Row="0" Content="{Binding OpusComplexityLabel}" />
                        <Grid Grid.Row="1" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                LargeChange="1"
                                Maximum="10"
                                Minimum="5"
                                SmallChange="1"
                                TickFrequency="1"
                                Value="{Binding OpusComplexity, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:TextBox
                                Grid.Column="1"
                                Width="40"
                                VerticalAlignment="Center"
                                Text="{Binding OpusComplexity, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Right" />
                        </Grid>
                        <ui:TextBlock
                            Grid.Row="2"
                            FontSize="10"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding OpusComplexityHint}"
                            TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </ui:CardExpander>

            <!-- 音频增强设置 -->
            <ui:CardExpander
                Grid.Row="3"
                Margin="0,0,0,15"
                Header="{Binding AudioEnhancementLabel}"
                IsExpanded="False">
                <StackPanel Margin="10">
                    <!-- 音频增强说明 -->
                    <ui:TextBlock
                        FontSize="10"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Margin="0,0,0,10"
                        Text="{Binding AudioEnhancementHint}"
                        TextWrapping="Wrap" />

                    <!-- 峰值归一化设置 -->
                    <ui:ToggleSwitch
                        Margin="0,0,0,10"
                        Content="{Binding EnableAudioNormalizationLabel}"
                        IsChecked="{Binding EnableAudioNormalization, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- 归一化目标电平 -->
                    <Grid Margin="0,0,0,10" IsEnabled="{Binding EnableAudioNormalization}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="{Binding NormalizationTargetDbLabel}" />
                        <Grid Grid.Row="1" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                LargeChange="1"
                                Maximum="0"
                                Minimum="-20"
                                SmallChange="0.5"
                                TickFrequency="1"
                                Value="{Binding NormalizationTargetDb, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:TextBox
                                Grid.Column="1"
                                Width="50"
                                VerticalAlignment="Center"
                                Text="{Binding NormalizationTargetDb, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                TextAlignment="Right" />
                        </Grid>
                        <ui:TextBlock
                            Grid.Row="2"
                            FontSize="10"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding AudioNormalizationHint}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <!-- 安静语音增强设置 -->
                    <ui:ToggleSwitch
                        Margin="0,0,0,10"
                        Content="{Binding EnableQuietBoostLabel}"
                        IsChecked="{Binding EnableQuietBoost, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- RMS 阈值设置 -->
                    <Grid Margin="0,0,0,10" IsEnabled="{Binding EnableQuietBoost}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="{Binding QuietBoostRmsThresholdLabel}" />
                        <Grid Grid.Row="1" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                LargeChange="5"
                                Maximum="0"
                                Minimum="-60"
                                SmallChange="1"
                                TickFrequency="5"
                                Value="{Binding QuietBoostRmsThresholdDbFs, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:TextBox
                                Grid.Column="1"
                                Width="50"
                                VerticalAlignment="Center"
                                Text="{Binding QuietBoostRmsThresholdDbFs, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                TextAlignment="Right" />
                        </Grid>
                        <ui:TextBlock
                            Grid.Row="2"
                            FontSize="10"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding QuietBoostRmsThresholdHint}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <!-- 增益设置 -->
                    <Grid Margin="0,0,0,0" IsEnabled="{Binding EnableQuietBoost}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="{Binding QuietBoostGainLabel}" />
                        <Grid Grid.Row="1" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                LargeChange="2"
                                Maximum="20"
                                Minimum="0"
                                SmallChange="0.5"
                                TickFrequency="2"
                                Value="{Binding QuietBoostGainDb, UpdateSourceTrigger=PropertyChanged}" />
                            <ui:TextBox
                                Grid.Column="1"
                                Width="50"
                                VerticalAlignment="Center"
                                Text="{Binding QuietBoostGainDb, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                TextAlignment="Right" />
                        </Grid>
                        <ui:TextBlock
                            Grid.Row="2"
                            FontSize="10"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding QuietBoostGainHint}"
                            TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </ui:CardExpander>

            <!-- 保存/撤销按钮 -->
            <StackPanel
                Grid.Row="5"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <ui:Button
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    Content="{Binding SaveLabel}"
                    IsDefault="True" />
                <ui:Button
                    Width="80"
                    Command="{Binding RevertCommand}"
                    Content="{Binding RevertLabel}"
                    IsCancel="False" />
            </StackPanel>
        </Grid>
    </ui:PassiveScrollViewer>
</Page>