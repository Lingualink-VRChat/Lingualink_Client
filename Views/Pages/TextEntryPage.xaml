<Page
    x:Class="lingualink_client.Views.TextEntryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:lingualink_client.ViewModels"
    Title="TextEntryPage"
    d:DataContext="{d:DesignInstance Type=vm:TextEntryPageViewModel}"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{DynamicResource PageContentMargin}">
            
            <!-- Page Title -->
            <TextBlock
                Text="{Binding PageTitle}"
                Style="{DynamicResource PageTitleTextBlockStyle}" />

            <!-- Input Card -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,0,12">
                <StackPanel>
                    <Label Content="{Binding InputTextLabel}" FontWeight="Medium" Margin="0,0,0,4"/>
                    
                    <ui:TextBox
                        x:Name="InputTextBox"
                        MinHeight="80"
                        AcceptsReturn="True"
                        Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        KeyDown="InputTextBox_KeyDown"
                        GotFocus="InputTextBox_GotFocus"
                        LostFocus="InputTextBox_LostFocus" 
                        PlaceholderText="在此处输入文本..." />

                    <!-- Input Status Hint -->
                    <ui:TextBlock
                        Margin="0,4,0,0"
                        Text="{Binding InputStatusText}"
                        Foreground="{DynamicResource SystemFillColorCautionBrush}"
                        FontSize="12"
                        FontWeight="Medium"
                        Visibility="{Binding IsInputStatusVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                        TextWrapping="Wrap" />

                    <!-- Actions -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Text="{Binding TextEntryHint}"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            FontSize="12"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <!-- Start Listening Button -->
                            <ui:Button
                                Margin="0,0,10,0"
                                Appearance="Primary"
                                Content="{Binding WorkButtonContent}"
                                Command="{Binding ToggleWorkCommand}"
                                Icon="{ui:SymbolIcon Mic24}" />
                                
                            <!-- Send Button -->
                            <ui:Button
                                Appearance="Primary"
                                Content="{Binding SendLabel}"
                                Command="{Binding SendCommand}"
                                Icon="{ui:SymbolIcon Send24}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Output Card -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{Binding SentToVrcLabel}" />
                    </Border>

                    <ui:TextBox
                        Grid.Row="1"
                        Margin="12"
                        MinHeight="80"
                        IsReadOnly="True"
                        AcceptsReturn="True"
                        Background="Transparent"
                        BorderThickness="0"
                        Text="{Binding ProcessedText, Mode=OneWay}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </Grid>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</Page>
