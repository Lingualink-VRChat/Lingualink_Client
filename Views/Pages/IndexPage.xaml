<Page
    x:Class="lingualink_client.Views.IndexPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:lingualink_client.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lingualink_client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:lingualink_client.ViewModels"
    Title="IndexPage"
    d:DataContext="{d:DesignInstance Type=vm:IndexWindowViewModel}"
    mc:Ignorable="d">

    <Grid Margin="{DynamicResource PageContentMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Update Notification -->
        <ui:Button
            Grid.Row="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,0,0,8"
            Padding="12,6"
            Content="发现新版本！"
            Command="{Binding ShowUpdateDialogCommand}"
            Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}" 
            Appearance="Info"/>

        <!--  Main Content  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 麦克风选择组件 -->
            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,0,12">
                <StackPanel DataContext="{Binding MicrophoneSelection}">
                    <TextBlock Text="{Binding SelectMicrophoneLabel}" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            DisplayMemberPath="FriendlyName"
                            IsEnabled="{Binding IsMicrophoneComboBoxEnabled}"
                            ItemsSource="{Binding Microphones}"
                            SelectedItem="{Binding SelectedMicrophone}" />
                            
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                            <ui:Button
                                Command="{Binding RefreshMicrophonesCommand}"
                                Content="{Binding RefreshLabel}"
                                Appearance="Secondary" 
                                Icon="{ui:SymbolIcon ArrowClockwise24}"/>
                                
                            <ui:ProgressRing
                                Margin="10,0,0,0"
                                IsIndeterminate="True" 
                                Width="20" 
                                Height="20"
                                Visibility="{Binding IsRefreshingMicrophones, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 目标语言组件 -->
            <ui:CardExpander
                Grid.Row="1"
                DataContext="{Binding TargetLanguage}"
                Header="{Binding TargetLanguagesLabel}"
                Icon="{ui:SymbolIcon LocalLanguage24}"
                IsExpanded="True"
                Margin="0,0,0,12">
                <StackPanel Margin="0,0,0,0">
                    <!-- Template Active Hint -->
                    <ui:InfoBar
                        Margin="0,0,0,8"
                        Severity="Warning"
                        IsClosable="False"
                        IsOpen="{Binding AreLanguagesEnabled, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"
                        Message="{Binding TemplateActiveHintLabel}" />
                    
                    <!-- ItemsControl with button-based reordering -->
                    <ItemsControl x:Name="LanguageItemsControl"
                                  ItemsSource="{Binding LanguageItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:SelectableTargetLanguageViewModel}">
                                <Border Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                        CornerRadius="6"
                                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                        BorderThickness="1"
                                        Padding="12,8"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" /> <!-- Move Buttons -->
                                            <ColumnDefinition Width="80" />   <!-- Label -->
                                            <ColumnDefinition Width="*" />    <!-- ComboBox -->
                                            <ColumnDefinition Width="Auto" /> <!-- Remove Button -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Move Buttons -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0"
                                                    Orientation="Horizontal"
                                                    IsEnabled="{Binding DataContext.AreLanguagesEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ui:CardExpander}}}">
                                            <ui:Button Padding="4" Margin="0,0,4,0" Command="{Binding MoveUpCommand}" Appearance="Transparent">
                                                <ui:SymbolIcon Symbol="ChevronUp24" FontSize="14" />
                                            </ui:Button>
                                            <ui:Button Padding="4" Command="{Binding MoveDownCommand}" Appearance="Transparent">
                                                <ui:SymbolIcon Symbol="ChevronDown24" FontSize="14" />
                                            </ui:Button>
                                        </StackPanel>

                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            FontWeight="Medium"
                                            Text="{Binding Label}" />

                                        <ComboBox
                                            Grid.Column="2"
                                            HorizontalAlignment="Stretch"
                                            ItemsSource="{Binding AvailableLanguages}"
                                            SelectedItem="{Binding SelectedDisplayLanguage}"
                                            DisplayMemberPath="DisplayName"
                                            IsEnabled="{Binding DataContext.AreLanguagesEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ui:CardExpander}}}" />
                                            
                                        <ui:Button
                                            Grid.Column="3"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            Command="{Binding RemoveItemCommand}"
                                            Appearance="Secondary"
                                            Icon="{ui:SymbolIcon Delete24}"
                                            ToolTip="{Binding RemoveLabel}"
                                            IsEnabled="{Binding DataContext.AreLanguagesEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ui:CardExpander}}}"
                                            Visibility="{Binding CanRemove, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <ui:Button
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        Command="{Binding AddLanguageCommand}"
                        Content="{Binding AddLanguageLabel}"
                        Icon="{ui:SymbolIcon Add24}"
                        Appearance="Secondary"
                        IsEnabled="{Binding AreLanguagesEnabled}" />
                </StackPanel>
            </ui:CardExpander>

            <!-- Bottom Split Area -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.62*" />
                    <ColumnDefinition Width="12" /> <!-- Gap -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left: Translation Result (Formerly Right) -->
                <Border Grid.Column="0"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="0"
                        VerticalAlignment="Stretch"
                        DataContext="{Binding TranslationResult}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="16,12">
                            <TextBlock
                                FontWeight="SemiBold"
                                Text="{Binding VrcOutputLabel}" />
                        </Border>
                        
                        <ui:TextBox
                            Grid.Row="1"
                            Margin="12"
                            AcceptsReturn="True"
                            IsReadOnly="True"
                            Text="{Binding ProcessedText, Mode=OneWay}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            MinHeight="80"
                            BorderThickness="0"
                            Background="Transparent" />
                    </Grid>
                </Border>

                <!-- Right: Start Listening & Status (Formerly Left) -->
                <Border Grid.Column="2"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="12"
                        VerticalAlignment="Stretch">
                    <StackPanel DataContext="{Binding MainControl}">
                        <ui:Button
                            HorizontalAlignment="Left"
                            Command="{Binding ToggleWorkCommand}"
                            Content="{Binding WorkButtonContent}"
                            Appearance="Primary"
                            Icon="{ui:SymbolIcon Mic24}" />
                            
                        <TextBlock
                            Margin="0,12,0,0"
                            FontSize="14"
                            Text="{Binding StatusText}" 
                            TextWrapping="Wrap"/>
                        
                        <TextBlock
                            Margin="0,12,0,0"
                            FontStyle="Italic"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding WorkHintLabel}" 
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
